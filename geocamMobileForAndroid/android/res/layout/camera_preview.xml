<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
    	android:layout_width="fill_parent"
		android:layout_height="0px"
		android:layout_weight="1">

        <ImageView android:id="@+id/camera_preview_imageview"
        	android:layout_width="fill_parent"
           	android:layout_height="fill_parent" />

		<LinearLayout
			android:orientation="horizontal"
			android:visibility="visible"
			android:gravity="bottom"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
				
			<EditText android:id="@+id/camera_preview_edittext"
				android:layout_weight="10"
		        android:gravity="top"
		        android:lines="3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
				
			<ImageButton android:id="@+id/camera_preview_fire_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/fire_icon_default" />
				
		    <ImageButton android:id="@+id/camera_preview_delete_button" 
		    	android:layout_width="wrap_content" 
		    	android:layout_height="wrap_content"
		    	android:src="@drawable/delete_64x64" />
		    	
			<ImageButton android:id="@+id/camera_preview_save_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:src="@drawable/save_64x64" />
				
			
		</LinearLayout>
	</FrameLayout>            
</LinearLayout>
